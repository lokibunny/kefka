<UserControl x:Class="Kefka.Views.Routines.Remiel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Kefka.Views.Routines"
             xmlns:viewModels="clr-namespace:Kefka.ViewModels"
             xmlns:utilities="clr-namespace:Kefka.Utilities"
             xmlns:loc="clr-namespace:Kefka.Properties"
             xmlns:controls="clr-namespace:Kefka.Controls"
             xmlns:enums="clr-namespace:Kefka.Models"
             xmlns:mahAppsControls="clr-namespace:KefkaUI.Metro.Controls;assembly=KefkaUI.Metro"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <viewModels:SettingsViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary>
            <utilities:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <mahAppsControls:MetroAnimatedTabControl>
        <mahAppsControls:MetroTabItem Header="Healing">
            <Grid HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Expander Margin="2" Grid.Row="0" Header="General">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  Width="Auto" />
                            <ColumnDefinition  Width="Auto" />
                            <ColumnDefinition  Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="1" Grid.Row="0">
                            <Label HorizontalAlignment="Center" Content="Solo Sect Mode" />
                            <ComboBox  Margin="2" SelectedValue="{Binding Remiel.SelectedSectMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Source={utilities:EnumBindingSource {x:Type enums:SoloSectMode}}}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <CheckBox Grid.Column="0" Grid.Row="1" Content="Auto Stop Healing" IsChecked="{Binding Remiel.AutoStopHeal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="0" Grid.Row="2" Content="Benefic" IsChecked="{Binding Remiel.UseBenefic, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="0" Grid.Row="3" Content="Benefic 2" IsChecked="{Binding Remiel.UseBenefic2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="0" Grid.Row="4" Content="Essential Dignity" IsChecked="{Binding Remiel.UseEssentialDignity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="0" Grid.Row="5" Content="Helios" IsChecked="{Binding Remiel.UseHelios, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="0" Grid.Row="6" Content="Collective Unconscious" IsChecked="{Binding Remiel.UseCollectiveUnconscious, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="0" Grid.Row="7" Content="Earthly Star" IsChecked="{Binding Remiel.UseEarthlyStar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="1" Grid.Row="7" Content="Use ES For Damage" IsChecked="{Binding Remiel.UseEarthlyStarForDamage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="0" Grid.Row="9" Content="Ascend" IsChecked="{Binding Remiel.UseAscend, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="1" Grid.Row="9" Content="Swiftcast Ascend" IsChecked="{Binding Remiel.UseSwiftcastAscend, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="2" Grid.Row="9" Content="Ascend with Lighspeed" IsChecked="{Binding Remiel.UseAscendWithLightspeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <controls:KefkaIntNumeric Grid.Column="1" Grid.Row="1" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Health %" Value="{Binding Remiel.StopHealHpPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Column="1" Grid.Row="2" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Health %" Value="{Binding Remiel.BeneficHpPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Column="1" Grid.Row="3" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Health %" Value="{Binding Remiel.Benefic2HpPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Column="1" Grid.Row="4" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Health %" Value="{Binding Remiel.EssentialDignityHpPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Column="1" Grid.Row="5" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Health %" Value="{Binding Remiel.HeliosHpPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Column="1" Grid.Row="6" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Health %" Value="{Binding Remiel.CollectiveUnconsciousHpPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Column="0" Grid.Row="8" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Health %" Value="{Binding Remiel.EarthlyStarHpPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <CheckBox Grid.Column="2" Grid.Row="4" Content="Tank Only" IsChecked="{Binding Remiel.UseEssentialDignityOnTankOnly, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Column="2" Grid.Row="5" Margin="2"  MinValue="0" MaxValue="100"  Increment="1"  LabelContent="Min Players" Value="{Binding Remiel.HeliosPlayerCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Column="2" Grid.Row="6" Margin="2"  MinValue="0" MaxValue="100"  Increment="1"  LabelContent="Min Players" Value="{Binding Remiel.CollectiveUnconsciousPlayerCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Column="1" Grid.Row="8" Margin="2"  MinValue="0" MaxValue="100"  Increment="1"  LabelContent="Min Players" Value="{Binding Remiel.EarthlyStarPlayerCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </Expander>

                <Expander Margin="2" Grid.Row="1" Header="Diurnal">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <CheckBox Grid.Row="0" Grid.Column="0" Content="Aspected Benefic With Diurnal" IsChecked="{Binding Remiel.UseAspectedBeneficWithDiurnal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Aspected Benefic Max Health %" Value="{Binding Remiel.DiurnalAspectedBeneficHpPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Benfic only if enabled and HP % &lt; " Value="{Binding Remiel.AspectedBeneficFloorPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"  HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Row="0" Grid.Column="0" Content="On Tanks" IsChecked="{Binding Remiel.DiurnalAspectedBeneficTanks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Grid.Row="0" Grid.Column="1" Content="On Healers" IsChecked="{Binding Remiel.DiurnalAspectedBeneficHealers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Grid.Row="0" Grid.Column="2" Content="On DPS" IsChecked="{Binding Remiel.DiurnalAspectedBeneficDps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>

                        <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"  HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Row="0" Grid.Column="0" Content="Keep Up On Tanks" IsChecked="{Binding Remiel.KeepDiurnalAspectedBeneficOnTanks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Grid.Row="0" Grid.Column="1" Content="Keep Up On Healer" IsChecked="{Binding Remiel.KeepDiurnalAspectedBeneficOnHealers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Grid.Row="0" Grid.Column="2" Content="Keep Up On DPS" IsChecked="{Binding Remiel.KeepDiurnalAspectedBeneficOnDps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>

                        <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3"  HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Row="0" Grid.Column="0" Content="Tank Aspect + Benefic" IsChecked="{Binding Remiel.AspectedBeneficFloorTanks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Grid.Row="0" Grid.Column="1" Content="Healer Aspect + Benefic" IsChecked="{Binding Remiel.AspectedBeneficFloorHealers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Grid.Row="0" Grid.Column="2" Content="DPS Aspect + Benefic" IsChecked="{Binding Remiel.AspectedBeneficFloorDps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>

                        <Grid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3"  HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Row="1" Grid.Column="0" Content="Diurnal Apected Helios" IsChecked="{Binding Remiel.UseDiurnalAspectedHelios, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <controls:KefkaIntNumeric Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Health %" Value="{Binding Remiel.DiurnalAspectedHeliosHpPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <controls:KefkaIntNumeric Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" Margin="2"  MinValue="0" MaxValue="25"  Increment="1"  LabelContent="Min Players" Value="{Binding Remiel.DiurnalAspectedHeliosPlayerCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </Grid>
                </Expander>

                <Expander Margin="2" Grid.Row="2" Header="Nocturnal">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <CheckBox Grid.Row="0" Grid.Column="0" Content="Aspected Benefic With Nocurnal" IsChecked="{Binding Remiel.UseAspectedBeneficWithNocturnal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Aspected Benefic Health %" Value="{Binding Remiel.NocturnalAspectedBeneficHpPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Benfic only if enabled and HP % &lt; " Value="{Binding Remiel.AspectedBeneficFloorPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"  HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Row="0" Grid.Column="0" Content="On Tanks" IsChecked="{Binding Remiel.NocturnalAspectedBeneficTanks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Grid.Row="0" Grid.Column="1" Content="On Healers" IsChecked="{Binding Remiel.NocturnalAspectedBeneficHealers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Grid.Row="0" Grid.Column="2" Content="On DPS" IsChecked="{Binding Remiel.NocturnalAspectedBeneficDps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>

                        <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"  HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Row="0" Grid.Column="0" Content="Keep Up On Tanks" IsChecked="{Binding Remiel.KeepNocturnalAspectedBeneficOnTanks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Grid.Row="0" Grid.Column="1" Content="Keep Up On Healer" IsChecked="{Binding Remiel.KeepNocturnalAspectedBeneficOnHealers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Grid.Row="0" Grid.Column="2" Content="Keep Up On DPS" IsChecked="{Binding Remiel.KeepNocturnalAspectedBeneficOnDps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>

                        <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3"  HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Row="0" Grid.Column="0" Content="Tank Aspect + Benefic" IsChecked="{Binding Remiel.AspectedBeneficFloorTanks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Grid.Row="0" Grid.Column="1" Content="Healer Aspect + Benefic" IsChecked="{Binding Remiel.AspectedBeneficFloorHealers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Grid.Row="0" Grid.Column="2" Content="DPS Aspect + Benefic" IsChecked="{Binding Remiel.AspectedBeneficFloorDps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>

                        <Grid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3"  HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Row="1" Grid.Column="0" Content="Nocturnal Aspected Helios" IsChecked="{Binding Remiel.UseNocturnalAspectedHelios, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <controls:KefkaIntNumeric Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Health %" Value="{Binding Remiel.NocturnalAspectedHeliosHpPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <controls:KefkaIntNumeric Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" Margin="2"  MinValue="0" MaxValue="100"  Increment="1"  LabelContent="Min Players" Value="{Binding Remiel.NocturnalAspectedHeliosPlayerCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </Grid>
                </Expander>
            </Grid>
        </mahAppsControls:MetroTabItem>

        <mahAppsControls:MetroTabItem Header="Cards" HorizontalAlignment="Left">
            <Grid HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Expander Margin="2" Grid.Row="0" Header="General">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <CheckBox Grid.Column="0" Grid.Row="0" Content="Use Cards" IsChecked="{Binding Remiel.UseCards, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="0" Grid.Row="1" Content="Card Prep Out of Combat" IsChecked="{Binding Remiel.UseCardPrepOutOfCombat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="0" Grid.Row="3" Content="Bole Tank Only" IsChecked="{Binding Remiel.BoleTank, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="0" Grid.Row="4" Content="Ewer Healers Only" IsChecked="{Binding Remiel.EwerHealer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Lady Hp%" Value="{Binding Remiel.LadyofCrownsHpPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                       
                        <CheckBox Grid.Column="1" Grid.Row="0" Content="Only Draw" IsChecked="{Binding Remiel.OnlyDraw, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" Margin="2"  MinValue="0" MaxValue="100"  Increment="1"  LabelContent="Min Combat Draw Time" Value="{Binding Remiel.CardDrawTimeMin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="1" Grid.Row="1" Content="Only in Party" IsChecked="{Binding Remiel.UseCardPrepOutOfCombatOnlyInParty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Bole Hp%" Value="{Binding Remiel.BoleHpPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Ewer Mp%" Value="{Binding Remiel.EwerMpPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:KefkaIntNumeric Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" Margin="2"  MinValue="0" MaxValue="100"  Increment="5"  LabelContent="Spire Tp%" Value="{Binding Remiel.SpireTpPct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="0" Grid.Row="6" Content="Use Sleeve Draw" IsChecked="{Binding Remiel.UseSleeveDraw, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="1" Grid.Row="6" Content="Use Undraw" IsChecked="{Binding Remiel.UseUndraw, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="0" Grid.Row="7" Content="Cast Cards W/ RR Only" IsChecked="{Binding Remiel.UseHeldAndRoyalRoad, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </Expander>

                <Expander Margin="2" Grid.Row="1" Header="Cast Card">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column ="0" Grid.Row="0" Text="Balance w/ :"></TextBlock>
                        <CheckBox Grid.Column="1" Grid.Row="0" Content="Enhanced" IsChecked="{Binding Remiel.EnhancedBalance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="2" Grid.Row="0" Content="Extended" IsChecked="{Binding Remiel.ExtendedBalance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="3" Grid.Row="0" Content="Expanded" IsChecked="{Binding Remiel.ExpandedBalance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Grid.Column ="0" Grid.Row="1" Text="Bole w/ :"></TextBlock>
                        <CheckBox Grid.Column="1" Grid.Row="1" Content="Enhanced" IsChecked="{Binding Remiel.EnhancedBole, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="2" Grid.Row="1" Content="Extended" IsChecked="{Binding Remiel.ExtendedBole, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="3" Grid.Row="1" Content="Expanded" IsChecked="{Binding Remiel.ExpandedBole, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Grid.Column ="0" Grid.Row="2" Text="Arrow w/"></TextBlock>
                        <CheckBox Grid.Column="1" Grid.Row="2" Content="Enhanced" IsChecked="{Binding Remiel.EnhancedArrow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="2" Grid.Row="2" Content="Extended" IsChecked="{Binding Remiel.ExtendedArrow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="3" Grid.Row="2" Content="Expanded" IsChecked="{Binding Remiel.ExpandedArrow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Grid.Column ="0" Grid.Row="3" Text="Spear w/ :"></TextBlock>
                        <CheckBox Grid.Column="1" Grid.Row="3" Content="Enhanced" IsChecked="{Binding Remiel.EnhancedSpear, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="2" Grid.Row="3" Content="Extended" IsChecked="{Binding Remiel.ExtendedSpear, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="3" Grid.Row="3" Content="Expanded" IsChecked="{Binding Remiel.ExpandedSpear, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Grid.Column ="0" Grid.Row="4" Text="Ewer w/ :"></TextBlock>
                        <CheckBox Grid.Column="1" Grid.Row="4" Content="Enhanced" IsChecked="{Binding Remiel.EnhancedEwer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="2" Grid.Row="4" Content="Extended" IsChecked="{Binding Remiel.ExtendedEwer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="3" Grid.Row="4" Content="Expanded" IsChecked="{Binding Remiel.ExpandedEwer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Grid.Column ="0" Grid.Row="5" Text="Spire w/ :"></TextBlock>
                        <CheckBox Grid.Column="1" Grid.Row="5" Content="Enhanced" IsChecked="{Binding Remiel.EnhancedSpire, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="2" Grid.Row="5" Content="Extended" IsChecked="{Binding Remiel.ExtendedSpire, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox Grid.Column="3" Grid.Row="5" Content="Expanded" IsChecked="{Binding Remiel.ExpandedSpire, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </Expander>

                <Expander Margin="2" Grid.Row="2" Header="Redraw">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
